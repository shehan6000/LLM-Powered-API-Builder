@st.cache_resource
def get_llm():
    return ChatGroq(model="llama-3.3-70b-versatile", temperature=0.3, max_tokens=8000)

@st.cache_resource
def get_embeddings():
    return HuggingFaceEmbeddings(model_name="all-MiniLM-L6-v2", model_kwargs={'device': 'cpu'})

@st.cache_resource
def get_vectordb():
    embeddings = get_embeddings()
    patterns = [
        "Rental: properties(address,price,status), bookings(dates,property_id,user_id), users(name,email,phone), payments(amount,booking_id,status), reviews(rating,comment,property_id)",
        "E-commerce: products(name,price,stock,category), orders(user_id,total,status,date), customers(name,email,address), cart_items(product_id,quantity,user_id), inventory(product_id,quantity,warehouse)",
        "Blog: posts(title,content,author_id,published_date), comments(content,post_id,user_id), users(username,email,bio), categories(name,description), tags(name)",
        "Tasks: projects(name,description,owner_id), tasks(title,description,status,project_id,assignee_id), users(name,email,role), comments(content,task_id,user_id)",
        "Restaurant: menu_items(name,description,price,category), orders(customer_id,total,status), customers(name,phone,address), order_items(order_id,menu_item_id,quantity)"
    ]
    try:
        return Chroma.from_texts(texts=patterns, embedding=embeddings, persist_directory="./vectordb")
    except:
        return Chroma(persist_directory="./vectordb", embedding_function=embeddings)

def generate_schema(description, llm, vectordb):
    similar = vectordb.similarity_search(description, k=2)
    context = "\\\\n".join([doc.page_content for doc in similar])
    
    prompt = ChatPromptTemplate.from_messages([
        ("system", """Generate complete SQLAlchemy models.

Similar patterns:
{context}

RULES:
1. Complete working code with imports
2. Use: from sqlalchemy import create_engine, Column, Integer, String, Float, DateTime, ForeignKey, Boolean, Text
3. Use: from sqlalchemy.ext.declarative import declarative_base
4. Use: from sqlalchemy.orm import relationship, sessionmaker
5. Use: from datetime import datetime
6. Create Base = declarative_base()
7. Add __tablename__, __repr__
8. Add created_at = Column(DateTime, default=datetime.utcnow)
9. Add updated_at = Column(DateTime, default=datetime.utcnow, onupdate=datetime.utcnow)
10. Add relationships with back_populates
11. End with: engine = create_engine('sqlite:///database.db')
12. End with: Base.metadata.create_all(engine)

Generate for: {description}"""),
        ("user", "{description}")
    ])
    
    response = (prompt | llm).invoke({"description": description, "context": context})
    return response.content

def generate_api(schema_code, description, llm):
    prompt = ChatPromptTemplate.from_messages([
        ("system", """Generate complete FastAPI application.

Schema:
{schema_code}

RULES:
1. Complete working FastAPI code
2. Import: from fastapi import FastAPI, HTTPException, Depends
3. Import: from pydantic import BaseModel
4. Import: from sqlalchemy.orm import Session
5. Import: from typing import List, Optional
6. Import models from models file
7. Create Pydantic schemas for each model (Create, Update, Response)
8. Add get_db() dependency
9. Create ALL CRUD endpoints for EACH model:
   - POST /items (create)
   - GET /items (list with pagination)
   - GET /items/{{id}} (get one)
   - PUT /items/{{id}} (update)
   - DELETE /items/{{id}} (delete)
10. Add error handling with HTTPException
11. Add CORS middleware
12. Add @app.on_event("startup") to create tables
13. Add proper status codes (200, 201, 404, 400)

Generate main.py for: {description}"""),
        ("user", "{description}")
    ])
    
    response = (prompt | llm).invoke({"schema_code": schema_code, "description": description})
    return response.content

def save_files(api_name, schema_code, api_code):
    project_dir = Path(f"./generated_apis/{api_name}")
    project_dir.mkdir(parents=True, exist_ok=True)
    
    (project_dir / "models.py").write_text(schema_code)
    (project_dir / "main.py").write_text(api_code)
    (project_dir / "requirements.txt").write_text("fastapi==0.104.1\\\\nuvicorn[standard]==0.24.0\\\\nsqlalchemy==2.0.23\\\\npydantic==2.5.0")
    (project_dir / "README.md").write_text(f"""# {api_name} API

## Install
```bash
pip install -r requirements.txt
```

## Run
```bash
uvicorn main:app --reload --host 0.0.0.0 --port 8000
```

## Docs
http://localhost:8000/docs
""")
    return project_dir

